<div class="wrapper">      
    <div id="page-body" class="reports">
        <div class="topSection formcontrol">
            <form>
                <ul>
                    <li>
                        <div class="cardTopFirstSection">
                            <div class="select-field field">
                                <label for="selectReport">Report</label>
                                <select id="selectReport">
