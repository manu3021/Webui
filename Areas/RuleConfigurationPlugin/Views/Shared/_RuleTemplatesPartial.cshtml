<script type="text/html" id="RULESETTINGS_FOR_DEVICE_TEMPLATE">
    <li>
        <ul id="RULESETTINGS_FOR_DEVICE" data-template="RULESETTINGS_FOR_DEVICE_TEMPLATE">
            <li class="clear">
                <div class="field right-inner-addon">
                    <span id="device-popoverbtn" data-placement="auto" class="input-group-addon">
                        <b class="icon_list1" data-bind="click: $data.leftControlClick"></b>
                    </span>
                    <label class="floatLblDn">@Resources.RULE_LABEL_DEVICE <b class="rsAcCount" data-bind="text: $data.RuleAction().ActionNameCount"></b></label>
                    <input type="text" class="floatTxt myStyle" readonly="readonly" id="txt_device" data-bind="value: $data.RuleAction().getactionnames()">
                </div>
            </li>
            <li>
                <span class="oddContainer"></span>
            </li>
            <li>
                <div class="rulefield field right-inner-addon">
                    <span data-toggle="popover" class="input-group-addon">
                        <b class="icon_list1" data-bind="click: $data.rightControlClick"></b>
                    </span>
                    <label class="floatLblDn">@Resources.RULE_OPTION_SELECTEVENTS <b class="rsAcCount" data-bind="text: $data.RuleAction().ActionParamCount" /></label>
                    <input type="text" class="floatTxt myStyle" readonly="readonly" data-bind="value: $data.RuleAction().getactionListParams(), attr: { title: $data.RuleAction().getactionListParams() }">
                </div>
                <span class="remove-button" data-bind="click: $data.removebtnclicked">
                    <b class="icon_removeRule"></b>
                </span>
            </li>
            <li class="rulesettingsLastListyle">
                <div class="seperator clear">
                    <div class="seperator_center_line"></div>
                    <div class="switch_options">
                        <span class="switch_enable">@Resources.RULE_LABEL_AND</span>
                        <span class="switch_disable selected">@Resources.RULE_LABEL_OR</span>
                        <input type="hidden" class="switch_val" data-bind="value:$data.RuleCondition">
                    </div>
                </div>
            </li>
        </ul>
    </li>
</script>


